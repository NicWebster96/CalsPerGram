<% layout('layouts/boilerplate.ejs') %>
<h1>All Meals!</h1>
<div class="mt-1 mb-3">
  <a href="/meals/new">Add new meal</a>
</div>
<% for(let meal of meals) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= meal.name %></h5>
        <p class="card-text"><%= meal.body %></p>
        <a class="btn btn-primary" href="/meals/<%= meal._id %>">View</a>
      </div>
    </div>
  </div>
</div>
<% } %>
